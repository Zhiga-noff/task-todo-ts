{
  "files": [],
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    //    "types": [
    //      "jest",
    //      "node"
    //    ],
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    // Опционально для генерации карт деклараций
    "allowJs": true,
    "target": "es6",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "types": [
      "vite/client",
      "jest",
      "node"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "include": [
    "src/**/*",
    "src/**/*.tsx",
    "src/**/*.scss"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.tsx"
    // Убедитесь, что тесты исключены
  ]
}
